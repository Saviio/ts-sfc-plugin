{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "declaration": true,
    "jsx": "react",
    "outDir": "lib",
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2015",
      "es2016"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}